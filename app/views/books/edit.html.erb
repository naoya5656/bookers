<body>

<h1 class="edit-title">Editing Book</h1>
<% if @book.errors.any? %>
 <div class="error">
  <h2 class="error-text"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
 <% end %>
   </ul>
 <% end %>
 </div>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class="edit">
 <p>Title</p>
 <%= f.text_field :title %>
</div>
<div class="edit">
 <p>Body</p>
 <%= f.text_area :body %>
</div>
<div class="edit">
 <%= f.submit 'Update Book' %>
</div>
<% end %>
<%= link_to "show", book_path %> | <%= link_to "Back", books_path %>
</body>



