<body>
 <h1 class="index-title">Books</h1>

 <table>
    <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3">
    </thead>
    <tbody>
    <tr><% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td class="link"><%=link_to "Show", book_path(book.id) %></td>
    <td class="link"><%=link_to "Edit", edit_book_path(book.id) %></td>
    <td class="link"><%=link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are You sure?" %></td>
    </tr>
    <% end %>
    </tbody>
    </table>


 <h2 class="new">New book</h2>
 <% if @book.errors.any? %>
 <div class="error">
  <h2 class="error-text"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
 <% end %>
   </ul>
 <% end %>
 </div>
 
  
 <%= form_with model: @book, url: '/books', method: :post do |f| %>
 <div class="field">
  <p>Title</p>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <P>Body</P>
  <%= f.text_area :body %>
 </div>
<%= f.submit 'Create Book' %>
<% end %>
</body>